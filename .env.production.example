# ================================
# CONFIGURATION PRODUCTION
# ================================
# Copier ce fichier vers .env et remplir les valeurs

ENVIRONMENT=production

# ================================
# REGISTRE FORGEJO
# ================================
REGISTRY_URL=git.monserveur.com
REGISTRY_USER=monorganisation

# ================================
# POSTGRESQL
# ================================
POSTGRES_DB=production_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=CHANGEZ_MOI_MOT_DE_PASSE_SECURISE
POSTGRES_PORT=5433

# ================================
# PGADMIN
# ================================
PGADMIN_EMAIL=admin@mondomaine.com
PGADMIN_PASSWORD=CHANGEZ_MOI_PGADMIN_SECURISE
PGADMIN_PORT=5050

# ================================
# TAGS DES IMAGES
# ================================
FRONTEND_TAG=latest
BACKEND_GESTION_TAG=latest
BACKEND_NORDTEXT_TAG=latest
BACKEND_SGMAO_TAG=latest

# ================================
# PORTS DES APPLICATIONS
# ================================
FRONTEND_PORT=80
BACKEND_GESTION_PORT=8081
BACKEND_NORDTEXT_PORT=8082
BACKEND_SGMAO_PORT=8083

# ================================
# SPRING BOOT CONFIGURATION
# ================================
SPRING_PROFILE=prod
HIBERNATE_DDL_AUTO=validate
JWT_SECRET=CHANGEZ_MOI_SECRET_JWT_TRES_LONG_ET_ALEATOIRE_MIN_256_BITS

# ================================
# API CONFIGURATION
# ================================
API_URL=https://api.mondomaine.com

# ================================
# MONITORING
# ================================
GRAFANA_USER=admin
GRAFANA_PASSWORD=CHANGEZ_MOI_GRAFANA_SECURISE
PROMETHEUS_PORT=9190
GRAFANA_PORT=3000
LOKI_PORT=3100

# ================================
# SECRETS FORGEJO (pour CI/CD)
# ================================
# Ces secrets doivent etre configures dans Forgejo:
#
# VPS_HOST          - Adresse IP ou domaine du serveur
# VPS_USER          - Utilisateur SSH (ex: deploy)
# VPS_SSH_KEY       - Cle privee SSH
# VPS_DEPLOY_PATH   - Chemin de deploiement (ex: /opt/apps)
# REGISTRY_URL      - URL du registre Forgejo
# POSTGRES_PASSWORD_PROD - Mot de passe PostgreSQL
# GRAFANA_PASSWORD_PROD  - Mot de passe Grafana
# JWT_SECRET        - Secret JWT pour les backends
